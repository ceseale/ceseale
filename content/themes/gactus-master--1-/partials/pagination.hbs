<nav id="post-nav">
    {{#if prev}}
        <span class="prev">
            <a href="{{page_url prev}}" title="Previous Page">
                <span class="arrow">←</span> Newer Posts
            </a>
        </span>
    {{/if}}
    
    {{#if next}}
        <span class="next">
            <a href="{{page_url next}}">
                Older Posts <span class="arrow">→</span>
            </a>
        </span>
    {{/if}}
</nav>